<% provide :title, "Tạo mới bài học" %>

<div class="row">
  <div class="col-lg-12">
    <section class="panel">
      <header class="panel-heading">
      	Tạo mới bài học
      </header>
      <div class="panel-body">
        <div class="position-center">
        	<%= form_for [:admin, @chapter, @lesson] do |f| %>
						<div class="form-group">
							<%= f.hidden_field :chapter_id, value: @chapter.id %>
					    <%= f.label :chapter_id, "Chương" %>
					    <%= f.select :chapter_id, options_for_select(@chapter_options, @chapter.id), {}, class: "form-control select-course" %>
					  </div>
						<div class="form-group">
					    <%= f.label :name, "Tên bài học" %>
					    <%= f.text_field :name, class: "form-control" %>
					  </div>
					  <div class="form-group">
					    <%= f.label :content, "Nội dung bài học" %>
					    <%= f.cktext_area :content, class: "form-control" %>
					  </div>
					  <center><%= f.submit "Tạo mới", class: "btn btn-primary mb-3" %>
					<% end %>
        </div>
      </div>
    </section>
  </div>
</div>