<% if @categories %>
	$('#modal-edit-unit').modal('hide');
	$('.list-categories').html('<%= j render "admin/categories/list_categories",\
	  categories: @categories %>');
	$('.flash-errors').html('<%= j render "admin/layouts/flash_errors" %>');
	$('.autohide').delay(2000).slideUp('slow');
<% end %>
