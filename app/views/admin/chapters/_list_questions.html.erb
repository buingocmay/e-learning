<% @chapter.questions.each_with_index do |question, index| %>
  <tr data-expanded="true">
    <td><%= index+1 %></td>
    <td><%= question.content %></td>
    <td>
    	<% question.choices.each_with_index do |choice, index| %>
    		<%= index+1 %>. <%= choice.content %>
    		<% if choice.is_correct %>
    			<i class="fa fa-check-square-o"></i>
    		<% end %>
    		<br>
    	<% end %>
    </td>
    <td>
			Sửa |
      <%= link_to admin_chapter_question_path(@chapter, question), method: :delete,remote: true, data: {confirm: "Xóa?"} do %>
        Xóa
      <% end %>
    </td>
  </tr>
<% end %>