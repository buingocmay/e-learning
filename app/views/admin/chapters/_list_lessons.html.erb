<% @chapter.lessons.each_with_index do |lesson, index| %>
  <tr data-expanded="true">
    <td><%= index+1 %></td>
    <td>
    	<%= link_to lesson.name, admin_chapter_lesson_path(@chapter, lesson) %>	
  	</td>
    <td>
    	<%= link_to "Sửa", edit_admin_chapter_lesson_path(@chapter, lesson) %> | 
      <%= link_to admin_chapter_lesson_path(@chapter, lesson), method: :delete, remote: true, data: {confirm: "Xóa?"} do %>
        Xóa
      <% end %>
    </td>
  </tr>
<% end %>
