<%= form_for [:admin, @course], remote: true do |f| %>
	<div class="form-group">
		<%= f.hidden_field :unit_id, value: @unit.id %>
    <%= f.label :unit_id, "Unit" %>
    <%= f.select :unit_id, options_for_select(@unit_options, @unit.id), {}, class: "form-control select-unit" %>
  </div>
	<div class="form-group">
    <%= f.label :name, "Tên khóa học" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <center><%= f.submit "Tạo mới", class: "btn btn-primary mb-3" %>
<% end %>