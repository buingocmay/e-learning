<% @course.exam_structures.each_with_index do |exam_structure, index| %>
  <tr data-expanded="true">
    <td><%= index+1 %></td>
    <td>
    	<%= link_to exam_structure.name, admin_exam_structure_path(exam_structure) %>
  	</td>
    <td><%= exam_structure.total_questions %></td>
    <td>
      <% exam_structure.exam_structure_details.each do |detail|%>
        <%= detail.chapter.name %>: <%= detail.number_questions %> câu<br> 
      <% end %>
    </td>
    <td><%= exam_structure.time %></td>
    <td>
			Sửa |
      <%= link_to admin_exam_structure_path(exam_structure), method: :delete, remote: true, data: {confirm: "Xóa?"} do %>
        Xóa
      <% end %>
    </td>
  </tr>
<% end %>