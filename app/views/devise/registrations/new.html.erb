<div class="register">
  <div class="container">
    <h2>Đăng ký</h2>
    <div class="login-form-grids">
      <%= form_for resource, as: resource_name, url: registration_path(resource_name) do |f| %>
        <%= devise_error_messages! %>

        <div class="form-group">
          <%= f.text_field :name, autofocus: true, class: "field", placeholder: "Tên người dùng..." %>
        </div>
        
        <div class="form-group">
          <%= f.email_field :email, class: "field", placeholder: "Email..." %>
        </div>

        <div class="form-group">
          <%= f.password_field :password, class: "field", placeholder: "Mật khẩu..." %>
        </div>

        <div class="form-group">
          <%= f.password_field :password_confirmation, class: "field", placeholder: "Nhập lại mật khẩu..." %>
        </div>

        <div class="right-w3l">
          <div class="actions">
            <%= f.submit "Đăng ký" %>
          </div><br>
        </div>

        <p class="text-center dont-do"><%= "Đã có tài khoản?" %>
          <%= render "devise/shared/links" %>
        </p>
      <% end %>
    </div>
  </div>
</div>
