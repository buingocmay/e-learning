<div class="register">
  <div class="container">
    <h2>Sign up</h2>
    <div class="login-form-grids">
      <%= form_for resource, as: resource_name, url: registration_path(resource_name) do |f| %>
        <%= devise_error_messages! %>

        <div class="form-group">
          <%= f.label :name, class: "col-form-label" %><br />
          <%= f.text_field :name, autofocus: true, class: "form-control field" %>
        </div>
        
        <div class="form-group">
          <%= f.label :email, class: "col-form-label" %><br />
          <%= f.email_field :email, class: "form-control field" %>
        </div>

        <div class="form-group">
          <%= f.label :password, class: "col-form-label" %><br/>
          <%= f.password_field :password, class: "form-control field" %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, class: "col-form-label" %><br/>
          <%= f.password_field :password_confirmation, class: "form-control field" %>
        </div>

        <div class="right-w3l">
          <div class="actions">
            <%= f.submit "Sign up", class: "btn btn-submit btn-success" %>
          </div><br>
        </div>

        <p class="text-center dont-do"><%= "Have an account?" %>
          <%= render "devise/shared/links" %>
        </p>
      <% end %>
    </div>
  </div>
</div>
