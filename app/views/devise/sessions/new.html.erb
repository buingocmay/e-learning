<div class="login">
  <div class="container">
    <h2>Đăng nhập</h2>
    <div class="login-form-grids animated wow slideInUp" data-wow-delay=".5s">
      <%= form_for resource, as: resource_name,
        url: session_path(resource_name) do |f| %>
        <div class="form-group">
          <%= f.email_field :email, autofocus: true, class: "field", placeholder: "Email..." %>
        </div>
        <div class="form-group">
          <%= f.password_field :password, class: "field", placeholder: "Mật khẩu..." %>
        </div>
        <div class="right-w3l">
          <div class="actions">
            <%= f.submit "Đăng nhập" %>
          </div><br>
          <div class="register-check-box">
            <div class="check">
              <% if devise_mapping.rememberable? %>
                <%= f.check_box :remember_me %>
              <% end %>
              <label for="brand1" class="text-dark">
                <span></span><%= "Ghi nhớ đăng nhập" %></label>
            </div>
          </div>
        </div>
        <p class="text-center dont-do">
          <% unless resource_name == :admin %>
            <%= "Chưa có tài khoản?" %>
          <% end %>
          <%= render "devise/shared/links" %>
        </p>
      <% end %>
    </div>
  </div>
</div>
